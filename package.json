{
  "name": "weather-reporter-weather-service",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV=production node src/app.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "dev:debug": "cross-env NODE_ENV=development nodemon --config nodemon.dev.json",
    "dev:staging": "cross-env NODE_ENV=staging nodemon --config nodemon.staging.json",
    "dev:watch": "cross-env NODE_ENV=development nodemon --watch src --watch db",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,js,mjs,cjs,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,mjs,cjs,css,md}\"",
    "docker:dev": "docker-compose up -d",
    "docker:dev:down": "docker-compose down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:build": "docker build -t weather-service .",
    "docker:clean": "docker system prune -f && docker volume prune -f"
  },
  "keywords": [],
  "author": {
    "name": "Waruna Wimalaweera",
    "email": "warunamadushanka456@gmail.com"
  },
  "contributors": [],
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "ioredis": "^5.6.1",
    "mongoose": "^8.16.0",
    "opossum": "^8.1.4",
    "retry": "^0.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.7",
    "@babel/preset-env": "^7.25.7",
    "@eslint/js": "^9.12.0",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.21.0",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^15.10.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.6.0",
    "supertest": "^7.1.1"
  }
}
